<div metal:use-macro="load: layout.pt">
    <div metal:fill-slot="content">

        <div class="content">

            <div class="hero">
                <h1>
                    Click auf einen Time Slot um <br>
                    die Waschmachine zu reservieren
                </h1>
            </div>

            <div class="laundry-stats">

            </div>


            <form action="${url}" method="POST" accept-charset="utf-8" enctype="text/plain">
                <label>7:00 </label>
                <input type="text" id="name" placeholder="Deine Name">
                <input type="submit" value="Submit"/>
            </form>

        </div>

    </div>


</div>