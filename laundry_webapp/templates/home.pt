<div metal:use-macro="load: layout.pt">
    <div metal:fill-slot="content">

        <div class="content">

            <div class="hero">
                <h1>
                    Click auf einen Time Slot um <br>
                    die Waschmachine zu reservieren
                </h1>
            </div>

            <div class="laundry-stats"></div>

            <p>${todays_appointments}</p>

            <div class="container time-slots">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">

                        <div class="time_slot" tal:repeat="h range(7,21)">

                            <form tal:condition="python: h not in todays_appointments" action="${url}" method="POST"
                                                                                       accept-charset="utf-8">
                                <label tal:replace="h"></label>
                                <label>
                                    <input type="text" name="name" placeholder="Deine Name">
                                </label>
                                <input type="submit" value="Sign Up"/>
                                <input type="hidden" name="time" value=${h}>
                            </form>

                            <div tal:condition="python: h in todays_appointments" class="taken">
                                <label tal:replace="h"></label>
                                <p>${todays_appointments[h]}</p>

                            </div>

                        </div>

                    <div class="col-md-3"></div>
                    </div>
                </div>

            </div>

        </div>

    </div>

</div>